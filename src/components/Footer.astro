	</div>
	
	<!-- Bottom Bar -->
	<div class="border-t border-charcoal">
		<div class="max-w-7xl mx-auto px-6 py-6">
			<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
				<!-- Copyright -->
				<p class="text-platinum/50 text-xs">
					Â© {currentYear} Auderon. All Rights Reserved.
				</p>
				
				<!-- Legal Links -->
				<div class="flex flex-wrap items-center gap-6">
					<a href="/privacy" class="footer-link text-platinum/50 text-xs hover:text-platinum transition-colors duration-200">
						Privacy Policy
					</a>
					<a href="/terms" class="footer-link text-platinum/50 text-xs hover:text-platinum transition-colors duration-200">
						Terms of Use
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer-link {
		position: relative;
	}
	
	.footer-link::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1px;
		background: currentColor;
		transition: width 0.2s ease;
	}
	
	.footer-link:hover::after {
		width: 100%;
	}
</style>
